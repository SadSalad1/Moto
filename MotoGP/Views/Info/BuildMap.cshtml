@model IEnumerable<MotoGP.Models.Race>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Races on map";
}
<img src="~/images/banners/map.png" usemap="#workmap" />
<map name="workmap">
    @foreach (var item in Model)
    {
        <area shape="circle" coords="@(item.X),@(item.Y),10" alt="@(item.Name)" href="@Url.Action("ShowRace", "Info", new { id = item.RaceID })">
    }
</map>
<br/>
<a asp-controller="Home" asp-action="Menu">Back</a> 
