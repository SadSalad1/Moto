@{
    var banners = new List<String>
    { "bannerRaces.jpg", "bannerRiders.jpg", "bannerTeams.jpg",  "bannerTickets.jpg" };

    string banner = "/images/banners/" + banners[(int)ViewData["BannerNr"]];
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - MotoGP</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <a asp-controller="Home" asp-action="Index"> <img src=@banner /> </a>
    <h1>@ViewData["Title"]</h1>
    <div>
        @RenderBody()
    </div>
</body>
</html>
