@model MotoGP.Models.Ticket
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Order Tickets";
    var countries = (SelectList)ViewData["Countries"];
    var races = (List<Race>)ViewData["Races"];
}

<p>Please fill out following fields:</p>
<form asp-action="OrderTicket">
        <label asp-for="Name">@Html.DisplayNameFor(model => model.Name)</label>
        <input asp-for="Name" />
        <br />
        <label asp-for="Email">@Html.DisplayNameFor(model => model.Email)</label>
        <input asp-for="Email" />
        <br />
        <label asp-for="Address">@Html.DisplayNameFor(model => model.Address)</label>
        <input asp-for="Address" />
        <br />
        <label asp-for="Number">@Html.DisplayNameFor(model => model.Number)</label>
        <input asp-for="Number" type="radio" value="1" />
        <label>1</label>
        <input asp-for="Number" type="radio" value="2" />
        <label>2</label>
        <input asp-for="Number" type="radio" value="3" />
        <label>3</label>
        <input asp-for="Number" type="radio" value="4" />
        <label>4</label>
        <input asp-for="Number" type="radio" value="5" />
        <label>5</label>
        <input asp-for="Number" type="radio" value="6" />
        <label>6</label>
        <br />
        <label asp-for="Country"></label>
        <select asp-for="CountryID" asp-items="countries"></select>
        <br />
        <label asp-for="RaceID"></label>
        @foreach (var item in races)
        {
            <input asp-for="RaceID" type="radio" value="@item.RaceID" />
            <label>@item.Name</label>
            <br />
        }
    <input type="submit" value="Order" />

</form>
<a asp-controller="Home" asp-action="Menu">Back</a>